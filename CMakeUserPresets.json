{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "include": [],
  "configurePresets": [
    {
      "name": "debug_gcc",
      "displayName": "[g++] Debug",
      "description": "Debug build using GCC",
      "inherits": "ninja_debug",
      "binaryDir": "${sourceDir}/build/gcc/debug",
      "installDir": "${sourceDir}/install/gcc/debug",
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      },
      "cacheVariables": {
      }
    },
    {
      "name": "release_gcc",
      "displayName": "[g++] Release",
      "description": "Release build using GCC",
      "inherits": "ninja_release",
      "binaryDir": "${sourceDir}/build/gcc/release",
      "installDir": "${sourceDir}/install/gcc/release",
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      },
      "cacheVariables": {
      }
    },
    {
      "name": "release_with_debug_info_gcc",
      "displayName": "[g++] Release with Debug Info",
      "description": "Release with debug info build using GCC",
      "inherits": "ninja_release_with_debug_info",
      "binaryDir": "${sourceDir}/build/gcc/release_wdbgi",
      "installDir": "${sourceDir}/install/gcc/release_wdbgi",
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      },
      "cacheVariables": {
      }
    },
    {
      "name": "debug_clang",
      "displayName": "[clang++] Debug",
      "description": "Debug build using Clang",
      "inherits": "ninja_debug",
      "binaryDir": "${sourceDir}/build/clang/debug",
      "installDir": "${sourceDir}/install/clang/debug",
      "environment": {
        "CC": "clang-15",
        "CXX": "clang++-15"
      },
      "cacheVariables": {
      }
    },
    {
      "name": "release_clang",
      "displayName": "[clang++] Release",
      "description": "Release build using Clang",
      "inherits": "ninja_release",
      "binaryDir": "${sourceDir}/build/clang/release",
      "installDir": "${sourceDir}/install/clang/release",
      "environment": {
        "CC": "clang-15",
        "CXX": "clang++-15"
      },
      "cacheVariables": {
      }
      },
      {
        "name": "release_with_debug_info_clang",
        "displayName": "[clang++] Release with Debug Info",
        "description": "Release with debug info build using Clang",
        "inherits": "ninja_release_with_debug_info",
        "binaryDir": "${sourceDir}/build/clang/release_wdbgi",
        "installDir": "${sourceDir}/install/clang/release_wdbgi",
        "environment": {
          "CC": "clang-15",
          "CXX": "clang++-15"
        },
        "cacheVariables": {
        }
      },
      {
        "name": "debug_msvc",
        "displayName": "[msvc] Debug",
        "description": "Debug build using MSVC",
        "inherits": "ninja_debug",
        "binaryDir": "${sourceDir}/build/msvc/debug",
        "installDir": "${sourceDir}/install/msvc/debug",
        "environment": {
          "CC": "cl.exe",
          "CXX": "cl.exe"
        },
        "cacheVariables": {
        }
      },
      {
        "name": "release_msvc",
        "displayName": "[msvc] Release",
        "description": "Release build using MSVC",
        "inherits": "ninja_release",
        "binaryDir": "${sourceDir}/build/msvc/release",
        "installDir": "${sourceDir}/install/msvc/release",
        "environment": {
          "CC": "cl.exe",
          "CXX": "cl.exe"
        },
        "cacheVariables": {
        }
    },
    {
      "name": "release_with_debug_info_msvc",
      "displayName": "[msvc] Release with Debug Info",
      "description": "Release with Debug Info build using MSVC",
      "inherits": "ninja_release_with_debug_info",
      "binaryDir": "${sourceDir}/build/msvc/release_with_debug_info",
      "installDir": "${sourceDir}/install/msvc/release_with_debug_info",
      "environment": {
        "CC": "cl.exe",
        "CXX": "cl.exe"
      },
      "cacheVariables": {
      }
    }
  ],
  "testPresets": [
    {
      "name": "release_gcc",
      "configurePreset": "release_gcc",
      "displayName": "Test GCC Release",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "debug_gcc",
      "configurePreset": "debug_gcc",
      "displayName": "Test GCC Debug",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    }
  ]
}